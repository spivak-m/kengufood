mixin cartCardFin()
	.cart-card
		.cart-card_img
			img(src="media/img-p/item-1.jpg", alt="")
		
		.cart-card_content
			.cart-card_info
				b.cart-card_name Бургер
				span.cart-card_detail Вес 0.5 кг

			ul.cart-card_totals
				li.cart-card_total
					span Цена
					b 190 <i class="fas fa-ruble-sign"></i>
				li.cart-card_total
					span Кол-во
					b 10
				li.cart-card_total
					span Сумма
					b 1900 <i class="fas fa-ruble-sign"></i>
